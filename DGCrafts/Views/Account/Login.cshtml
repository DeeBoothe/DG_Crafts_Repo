@{
    ViewData["Title"] = "Login";

    
}

<div class="text-center">
    <div>
        <img scr="" />
    </div>
    
    <div class="container border-primary" >

        
            <form class="form-text">
                <div class="form-group">
                    <label placeholder="name@email.com">Email Address</label>
                    <input type="email" />
                </div>

                <div class="form-group">
                    <label>Password</label>
                    <input type="password" />
                </div>

                <div class="form-group">
                    <input type="submit" class="btn btn-dark" value="Login" asp-controller="Customers" asp-action="Welcome" />
                    <input type="submit" class="btn btn-outline-dark" value="Register" asp-action="Register" />
                </div>

            </form>

        
    </div>
    

    <div><a href="">Forgot password?</a></div>


</div>
